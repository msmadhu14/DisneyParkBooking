@model IEnumerable<DisneyParkBooking.Data.Models.Booking>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookingStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingEndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerRef)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HotelRef)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookingStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingEndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerRef.IdCardPan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelRef.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
